{
    "manifest_version": 2,
    "name": "Amazon Smart Filter",
    "description": "Amazonのお買い得商品のみを表示する",
    "version": "0.1",
    "permissions": [
        "activeTab",
        "https://www.amazon.co.jp/*",
        "storage"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.amazon.co.jp/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "switch.css"
            ]
        }
    ],
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
    },
    "commands": {
        "sale-filter-toggle": {
            "suggested_key": {
                "default": "Ctrl+Shift+S",
                "mac": "MacCtrl+Shift+S"
            },
            "description": "Sale Show/Hide",
            "global": false
        }
    }
}